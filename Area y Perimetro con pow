#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
#define PI 3.1416

using namespace std;
int main () {
    float perimetro, area, radio;
    cout << "introduzca el radio"<<endl;
    cin >> radio;
    perimetro= 2*PI*radio;
    cout<< "encontar preimetro"<<endl;
    cout<<perimetro<<endl;
    area=PI*pow(radio,2);
    cout<<"el area es"<<endl;
    cout<<area;
    getch();
    return 0;
    

}
